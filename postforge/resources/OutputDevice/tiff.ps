%% pagedevice dictionary for tiff output device

<<
    /OutputDeviceName (tiff)
    /OutputDevice /tiff
    /PageSize [612 792]
    /HWResolution [300 300]
    /Margins [0.0 0.0]
    /PageOffset [0 0]
    /BitsPerPixel 24
    /NumCopies null
    /Install {
        %% Now override some settings
        % only set device-dependant settings here
        .9 setflat
        % Identity function for debugging - should leave stack unchanged
        {} settransfer
        % set other things here like...
        %   halftone screen
        %   color rendering dictionary

        % set the color space here with setcolorspace
        % this device is DeviceRGB
        /DeviceRGB setcolorspace
    }
    /BeginPage {pop}
    /EndPage {
        dup 0 eq { %% called from showpage
            pop (showpage: Creating tiff file for page ) print 1 add == true
        } {
            1 eq { %% called from copypage
                (copypage: Creating tiff file for page ) print 1 add == true
            } { %% called from device deactivation
                pop false
            } ifelse
        } ifelse
    }
    /InputAttributes <<>>  % from command line?
    /OutputAttributes <<>> % from command line?
    /ColorModel /DeviceRGB
    /Policies <<>>
    /PageCount 0
    /.IsPageDevice true
    /Separations false
    /Supported {}
    /RedValues 256
    /GreenValues 256
    /BlueValues 256
    /GraphicBlackPt 8
    /ImageBlackPt 8
    /TextBlackPt 8
    /SimulateOverprint false
    /Colors 3
    /LineWidthMin 1
    /TextRenderingMode /GlyphPaths  % or TextObjs
    /StrokeMethod /StrokePathFill  % strokepath+fill workaround for Cairo bitmap bugs
>>
